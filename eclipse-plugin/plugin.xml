<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.excelsior.langlocker.commands.ToggleInputLanguageLockHandler"
            description="Lock/unlock input language"
            id="com.excelsior.langlocker.commands.toggleLanguageLock"
            name="Lock/unlock input language">
         <state
               class="org.eclipse.ui.handlers.RegistryToggleState"
               id="org.eclipse.ui.commands.toggleState">
         </state>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="com.excelsior.langlocker.toolbar1"
               label="Lock Input Language">
            <command
                  commandId="com.excelsior.langlocker.commands.toggleLanguageLock"
                  id="com.excelsior.langlocker.toolbar1.toggleLanguageLock"
                  style="toggle"
                  tooltip="Lock/unlock input language">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="com.excelsior.langlocker.commands.toggleLanguageLock">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="com.excelsior.langlocker.commands.toggleLanguageLock"
            icon="icons/ico.png">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup>
      </startup>
   </extension>

</plugin>
